@model Entity.Hrm.PraiseDiscipline
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Số phiếu</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.PraiseDisciplineCode" readonly="readonly" id="PraiseDisciplineCode" class="form-control" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Quyết định (*)</label>
            </div>
            <div class="col-md-10">
                <input type="text" value="@Model.Title" id="Title" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4" title="Số quyết định">
                        <label>Số QĐ</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@Model.DecisionNumber" id="DecisionNumber"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4" title="Ngày quyết định">
                        <label>Ngày QĐ</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@Model.PraiseDisciplineDate.ToString("dd/MM/yyyy")" id="PraiseDisciplineDate"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Hình thức (*)</label>
            </div>
            <div class="col-md-10">
                <input type="text" class="form-control" value="@Model.Formality" id="Formality"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Lý do (*)</label>
            </div>
            <div class="col-md-10">
                <input type="text" class="form-control" value="@Model.Reason" id="Reason" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-2">
                <label>Ghi chú</label>
            </div>
            <div class="col-md-10">
                <textarea class="form-control" rows="2" id="Description" style="min-height: 56px">@Model.Description</textarea>
            </div>
        </div>

    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button class="btn btn-primary" id="btnSave">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var praiseDisciplineId = '@Model.PraiseDisciplineId';
</script>
<script src="~/Areas/Hrm/JsAction/Discipline/addOrEdit.js"></script>
