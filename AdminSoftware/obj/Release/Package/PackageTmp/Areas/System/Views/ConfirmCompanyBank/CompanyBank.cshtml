@model Entity.System.CompanyBank
<style>
    .k-checkbox-label:before {
        top: 5px;
    }

    .k-radio:checked + .k-radio-label:after {
        top: 8px;
    }

    .k-radio-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <label>Người giao dịch(*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" readonly="readonly" class="form-control" value="@Model.TradingBy" id="TradingBy" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Ngày giao dịch(*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" readonly="readonly" class="form-control" value="@Model.TradingDate.ToString("dd/MM/yyyy")" id="TradingDate" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Loại giao dịch(*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" readonly="readonly" class="form-control" value="@Model.ExpenseId" id="ExpenseId" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Mô tả</label>
            </div>
            <div class="col-md-9">
                <textarea id="ExpenseText" readonly="readonly" style="height: 60px;min-height: 60px" class="form-control" rows="2">@Model.ExpenseText</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Số tiền(*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" readonly="readonly" class="form-control" value="@Model.MoneyNumber" id="MoneyNumber" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Tiền tệ(*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" readonly="readonly" class="form-control" value="@Model.TypeMonney" id="TypeMonney" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>File xác minh</label>
            </div>
            <div class="col-md-9">
                <a href='@Model.FilePath' target="_blank" style='text-align:center'><i class='glyphicon glyphicon-download'></i></a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-3">
                        <label>Trạng Thái</label>
                    </div>
                    <div class="col-md-9">
                        <input value="1" class="k-radio" id="engine1" type="radio" disabled="disabled" name="optradio" @if (Model.Status == 1) { <text> checked="checked" </text> }>
                        <label for="engine1" class="k-radio-label">Chờ phê duyệt</label>
                        <input value="2" id="engine2" class="k-radio" type="radio" disabled="disabled" name="optradio" @if (Model.Status == 2) { <text> checked="checked" </text> }>
                        <label for="engine2" class="k-radio-label">Bị trả lại</label>
                        <input value="5" id="engine3" class="k-radio" type="radio" disabled="disabled" name="optradio" @if (Model.Status == 3) { <text> checked="checked" </text> }>
                        <label for="engine3" class="k-radio-label">Đã xác nhận</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="box-action">
                    <button class="btn btn-primary btn-sm" id="btnCreateTextNote">
                        <i class="fa fa-plus"></i>
                        Thêm
                    </button>
                    <button class="btn btn-primary btn-sm" id="btnDeleteTextNote">
                        <i class="fa fa-edit"></i>
                        Xóa
                    </button>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div id="grdMainTextNote"></div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button @if (Model.Status == 3) { <text> disabled="disabled" </text> } class="btn btn-success btn-sm" id="btnConfirmDetail">
                    <i class="glyphicon glyphicon-ok"></i>
                    Xác nhận
                </button>
                <button @if (Model.Status == 2) { <text> disabled="disabled" </text> } class="btn btn-danger btn-sm" id="btnCancelDetail">
                    <i class="glyphicon glyphicon-remove"></i>
                    Trả về
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var id = '@Model.CompanyBankId';
</script>
<script src="~/Areas/System/JsAction/ConfirmCompanyBank/addOrEdit.js"></script>