@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Quản lý chi thu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-2">
                <div class="box-action">
                    <button class="btn btn-primary btn-sm" id="btnCreate">
                        <i class="glyphicon glyphicon-plus"></i>
                        Thêm
                    </button>
                    <button class="btn btn-primary btn-sm" id="btnEdit">
                        <i class="glyphicon glyphicon-edit"></i>
                        Sửa
                    </button>
                    <button class="btn btn-primary btn-sm" id="btnDelete">
                        <i class="glyphicon glyphicon-trash"></i>
                        Xóa
                    </button>
                </div>
            </div>
            <div class="col-md-10">
                <div class="col-md-2">
                    <input type="text" value="" class="form-control" id="StatusSearch" style="height: 25px;" />
                </div>
                <div class="col-md-2">
                    <input type="text" value="" class="form-control" id="ExpenseIdSearch" style="height: 25px;" />
                </div>
                <div class="col-md-2">
                    <input type="text" value="@DateTime.Now.AddDays(-5).ToString("dd/MM/yyy")" class="form-control" id="FromDateSearch" style="height: 25px;" />
                </div>
                <div class="col-md-2">
                    <input type="text" value="@DateTime.Now.AddDays(+5).ToString("dd/MM/yyy")" class="form-control" id="ToDateSearch" style="height: 25px;" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary btn-sm" id="btnSearchDate">
                        <i class="glyphicon glyphicon-search"></i>
                        Tìm kiếm
                    </button>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="grdMain" event-dbclick="1"></div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var users = @Html.Raw(Json.Encode(ViewBag.Users));
        var expenseTypes = @Html.Raw(Json.Encode(ViewBag.ExpenseTypes));
        var typeMoneys = @Html.Raw(Json.Encode(ViewBag.TypeMoneys));
        var statusSearch = @Html.Raw(Json.Encode(ViewBag.StatusSearch));
        var expenseTypesAll = @Html.Raw(Json.Encode(ViewBag.ExpenseTypesAll)); 

    </script>
    <script src="~/Areas/System/JsAction/CompanyBank/index.js"></script>
}