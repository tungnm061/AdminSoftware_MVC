@model Entity.Sale.OrderDetail
<style>
    .k-checkbox-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Sản phẩm(*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden" value="@Model.ProductName" id="ProductName" />
                        <input type="hidden" value="@Model.ProductCode" id="ProductCode" />
                        <input type="text" class="form-control" value="@Model.ProductId"  id="ProductId" />
                        @*<button class="btn btn-primary btn-xs" id="ModalProduct" style="position: absolute; top: 1.0px; right: 15px; height: 20px;">
                            <i class="glyphicon glyphicon-search"></i>
