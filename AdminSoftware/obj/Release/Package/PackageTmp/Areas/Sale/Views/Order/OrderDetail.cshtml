                        </button>*@
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Kích thước(*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.Size" class="form-control" id="Size" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Màu sắc(*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.Color" class="form-control" id="Color" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Số lượng (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.Quantity" class="form-control" id="Quantity" />
                    </div>
                </div>
            </div>
        </div>
        @*<div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
