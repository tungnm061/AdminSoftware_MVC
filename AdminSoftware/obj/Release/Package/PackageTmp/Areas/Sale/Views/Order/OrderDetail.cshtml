                        <label>Đơn giá</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.UnitPrince" readonly="readonly" class="form-control" id="UnitPrince" />
                    </div>
                </div>
            </div>
        </div>*@
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 ">
                <button class="btn btn-primary" id="btnSaveAdd" style="float: right">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>

            </div>
        </div>
    </div>
</div>
