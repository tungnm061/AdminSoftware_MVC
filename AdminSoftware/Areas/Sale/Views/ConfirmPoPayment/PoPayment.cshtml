@model Entity.Sale.PoPayment
<style>
    .k-checkbox-label:before {
        top: 5px;
    }

    .k-radio:checked + .k-radio-label:after {
        top: 8px;
    }

    .k-radio-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Người giao dịch (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" readonly="readonly" value="@Model.TradingBy" class="form-control" id="TradingBy" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Ngày giao dịch(*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" readonly="readonly" value="@Model.TradingDate.ToString("dd/MM/yyyy")" class="form-control" id="TradingDate" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Số tiền (USD) (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" readonly="readonly" value="@Model.MoneyNumber" class="form-control" id="MoneyNumber" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Tỷ lệ(*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" readonly="readonly" value="@Model.RateMoney" class="form-control" id="RateMoney" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Trạng thái(*)</label>
                    </div>
                    <div class="col-md-8">
                        <input value="1" class="k-radio" id="engine1" type="radio" disabled="disabled" name="optradio"
                               @if (Model.Status == 1) { <text> checked="checked" </text>  }>
                        <label for="engine1" class="k-radio-label">Chờ phê duyệt</label>
                        <input value="2" id="engine2" class="k-radio" type="radio" disabled="disabled" name="optradio"
                               @if (Model.Status == 2) { <text> checked="checked" </text>  }>
                        <label for="engine2" class="k-radio-label">Bị trả lại</label>
                        <input value="5" id="engine3" class="k-radio" type="radio" disabled="disabled" name="optradio"
                               @if (Model.Status == 3) { <text> checked="checked" </text>  }>
                        <label for="engine3" class="k-radio-label">Đã xác nhận</label>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button @if (Model.Status == 3) { <text> disabled="disabled" </text> } class="btn btn-success btn-sm" id="btnConfirmDetail">
                    <i class="glyphicon glyphicon-ok"></i>
                    Xác nhận
                </button>
                <button @if (Model.Status == 2) { <text> disabled="disabled" </text> } class="btn btn-danger btn-sm" id="btnCancelDetail">
                    <i class="glyphicon glyphicon-remove"></i>
                    Trả về
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var poPaymentId = '@Model.PoPaymentId';
</script>
<script src="~/Areas/Sale/JsAction/ConfirmPoPayment/addOrEdit.js"></script>




