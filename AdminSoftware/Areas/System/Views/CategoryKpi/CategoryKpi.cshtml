@model Entity.System.CategoryKpi
<style>
    .k-checkbox-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Mã Kpi(*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.KpiCode" class="form-control" id="KpiCode" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4" title="Tên công việc">
                        <label>Tên Kpi (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.KpiName" class="form-control" id="KpiName" />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Mô tả</label>
                    </div>
                    <div class="col-md-8">
                        <textarea type="text" value="@Model.Description" rows="3" class="form-control" id="Description"></textarea>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 ">
                <button class="btn btn-primary" id="btnSave" style="float: right">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var categoryKpiId = '@Model.CategoryKpiId';
    var createBy = '@Model.CreateBy';
    var createDate = '@Model.CreateDate';
</script>
<script src="~/Areas/System/JsAction/Kpi/CategoryKpi/addOrEdit.js"></script>





