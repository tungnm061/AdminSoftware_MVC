@model Entity.Kpi.WorkDetail
<style>
    .k-checkbox-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Mã công việc </label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@Model.TaskCode" readonly="readonly" id="TaskCode" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Tên công việc</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@Model.TaskName" readonly="readonly" id="TaskName"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Giờ làm việc hữu ích</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@Model.UsefulHoursTask" readonly="readonly" id="UsefulHoursTask"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Thời gian thực hiện CV</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.FromDate.ToString("dd/MM/yyyy") - @Model.ToDate.ToString("dd/MM/yyyy")" readonly="readonly" class="form-control" id="DateSugges"/>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Mô tả</label>
                    </div>
                    <div class="col-md-8">
                        <textarea type="text" readonly="readonly" value="@Model.Description" rows="3" class="form-control" id="Description"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12  text-right" >
                <button @if (Model.VerifiedBy !=null) { { <text> disabled="disabled" </text> } } class="btn btn-primary" id="btnApproved" style="float: right; margin-left: 10px;">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Duyệt
                </button>    
                <button @if (Model.VerifiedBy == null || Model.ApprovedFisnishBy != null) { { <text> disabled="disabled" </text> } } class="btn btn-primary" id="btnCancel" style="float: right">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Hủy Duyệt
                </button>

            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var workDetailId = '@Model.WorkDetailId';
    var workType = '@Model.WorkType';
</script>
<script src="~/Areas/Hrm/JsAction/Kpi/ApproveSugges/suggesWork.js"></script>



