@{
    ViewBag.Title = "Nhân viên thực hiện công việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .k-radio:checked + .k-radio-label:after {
        top: 7px;
        margin-left: -1px;
    }

    .k-radio-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-8">
                <div class="col-md-2">
                    <input type="text" id="FromDateSearch" class="form-control" value="@DateTime.Now.AddDays(-6).ToString("dd/MM/yyyy")" style="height: 28px;" />
                    <input type="hidden" value="1" id="Action" class="form-control" />
                </div>
                <div class="col-md-2">
                    <input type="text" id="ToDateSearch" class="form-control" value="@DateTime.Now.AddDays(+6).ToString("dd/MM/yyyy")" style="height: 28px;" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary btn-sm" id="btnSearchDate">
                        <i class="fa fa-search"></i>
                        Tìm kiếm
                    </button>
                </div>
                <div class="col-md-6">
                    <button class="btn btn-primary btn-sm" id="btnEdit">
                        <i class="fa fa-edit"></i>
                        Thực hiện công việc
                    </button>
                    <button class="btn btn-primary btn-sm" id="btnRenewal">
                        <i class="fa fa-edit"></i>
                        Gia hạn
                    </button>
                </div>
          
            </div>
            <div class="col-md-4">
                <input value="1" class="k-radio" id="waiting" type="radio" name="status" checked="checked">
                <label for="waiting" class="k-radio-label">Cần hoàn thành</label>
                <input value="2" id="true-approved" class="k-radio" type="radio" name="status">
                <label for="true-approved" class="k-radio-label">Qúa hạn</label>
                <input value="3" id="true-finish" class="k-radio" type="radio" name="status">
                <label for="true-finish" class="k-radio-label">Đã hoàn thành</label>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="grdMain" event-dbclick="1"></div>
            </div>
        </div>
            </div>
        </div>
        

@section scripts
{
    <script type="text/javascript">
        var departments = @Html.Raw(Json.Encode(ViewBag.Departments));
        var employees = @Html.Raw(Json.Encode(ViewBag.Employee));
        var users = @Html.Raw(Json.Encode(ViewBag.Users));
        var statusWorkPlanDetail =  @Html.Raw(Json.Encode(ViewBag.WorkDetailStatusEnum));
        var statusWorkDetail = @Html.Raw(Json.Encode(ViewBag.StatusWorkDetail));
    </script>
    <script src="~/Areas/Hrm/JsAction/Kpi/ConfirmWork/index.js"></script>
}
