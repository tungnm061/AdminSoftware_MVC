@model Entity.Kpi.Complain
<style>
    .k-checkbox-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Nhân viên vi phạm (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden" value="@Model.AccusedBy" id="AccusedBy"/>
                        <input type="text" class="form-control" value="@Model.AccusedByName" readonly="readonly" id="AccusedByName"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Mô tả hành vi (*)</label>
                    </div>
                    <div class="col-md-8">
                        <textarea type="text"  rows="3" class="form-control" id="Description" style="min-height: 150px;">@Model.Description</textarea>
                    </div>
                </div>
            </div>
        </div>       
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 ">
                <button class="btn btn-primary"  id="btnSaveAdd" style="float: right" @if (Model.Status == 2)
                                                                                      {<text>disabled="disabled"</text>
                                                                                      }>

<i class="glyphicon glyphicon-floppy-saved"></i>
                    Xác nhận đúng
                </button>
                <button class="btn btn-primary" id="btnSaveCancel" style="float: right"  @if (Model.Status == 3)
                                                                                      {<text>disabled="disabled"</text>
                                                                                      }>>
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Xác nhận sai
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var complainId = '@Model.ComplainId';
    var createDate = '@Model.CreateDate';
    var createBy = '@Model.CreateBy';
    var statusComplain = '@Model.Status';
</script>
<script src="~/Areas/Hrm/JsAction/Kpi/ApprovedComplain/addOrEdit.js"></script>


