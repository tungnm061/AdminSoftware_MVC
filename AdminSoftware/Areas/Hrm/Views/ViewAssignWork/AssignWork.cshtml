@model Entity.Kpi.AssignWork
<style>
    .k-checkbox-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Tên công việc (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden" value="@Model.TaskId" id="TaskId" />
                        <input type="text"  class="form-control" value="@Model.TaskCode - @Model.TaskName" readonly="readonly" id="TaskName" placeholder="Mã công việc, tên công việc ...." />
                  </div>
                </div>
            </div>
        </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row padding-bottom-0">
                        <div class="col-md-4">
                            <label>Ngày bắt đầu (*)</label>
                        </div>
                        <div class="col-md-8">
                            <input type="text" readonly="readonly"  value="@Model.FromDate.ToString("dd/MM/yyyy")" class="form-control" id="FromDate"/>
                        </div>
                    </div>
                </div>
            </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Ngày hoàn thành(*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" readonly="readonly"  value="@Model.ToDate.ToString("dd/MM/yyyy")" class="form-control" id="ToDate"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Trạng thái (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.Status" class="form-control" id="Status" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Mô tả</label>
                    </div>
                    <div class="col-md-8">
                        <textarea type="text" readonly="readonly" value="@Model.Description" rows="3" class="form-control" id="Description" style="min-height: 180px;"></textarea>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<script type="text/javascript">
</script>
<script src="~/Areas/Hrm/JsAction/Kpi/ViewAssignWork/addOrEdit.js"></script>



