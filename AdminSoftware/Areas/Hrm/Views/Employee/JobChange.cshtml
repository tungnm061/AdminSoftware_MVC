@model Entity.Hrm.JobChange
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Số phiếu</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" readonly="readonly" class="form-control" value="@Model.JobChangeCode" id="JobChangeCode"/>
                    </div>
                </div>
            </div>
            @*<div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Nhân viên (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@Model.EmployeeId" id="EmployeeId" />
                    </div>
                </div>
            </div>*@
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Phòng cũ</label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden" class="form-control" value="@Model.FromDepartmentId" id="FromDepartmentId"/>
                        <input type="text" readonly="readonly" class="form-control" value="" id="FromDepartmentName" />

                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Phòng mới (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@Model.ToDepartmentId" id="ToDepartmentId" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Chức vụ cũ</label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden"  class="form-control" value="@Model.FromPositionId" id="FromPositionId"/>
                        <input type="text" readonly="readonly" class="form-control" value="" id="FromPositionName" />

                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Chức vụ mới</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text"  class="form-control" value="@Model.ToPositionId" id="ToPositionId" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4" title="Số quyết định">
                        <label>Số QĐ</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" class="form-control" value="@Model.JobChangeNumber" id="JobChangeNumber" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Quyết định</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text" value="@Model.JobChangeFile" readonly="readonly" class="form-control" id="JobChangeFile">
                        <input type="file" style="display: none" id="UploadJobChangeFile">
                        <div style="position: absolute;top: 0;right: 15px;">
                            <div class="btn-group">
                                <button type="button" id="btnUploadJobChangeFile" title="Upload file" class="btn btn-default btn-xs">
                                    <i class="glyphicon glyphicon-upload"></i>
                                </button>
                                <button type="button" id="btnRemoveJobChangeFile" title="Xóa file" class="btn btn-default btn-xs">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="text" class="form-control" value="@Model.Reason" id="Reason" placeholder="Lý do"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <textarea id="Description" class="form-control" rows="2">@Model.Description</textarea>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button class="btn btn-primary" id="btnSave">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var jobChangeId = '@Model.JobChangeId';
</script>
<script src="~/Areas/Hrm/JsAction/JobChange/addOrEdit.js"></script>
