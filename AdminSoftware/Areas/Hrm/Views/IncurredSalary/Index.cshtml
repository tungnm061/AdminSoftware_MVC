
@{
    ViewBag.Title = "Lương phát sinh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">@ViewBag.Title</div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <button class="btn btn-primary btn-sm" id="btnCreate">
                    <i class="fa fa-edit"></i>
                    Thêm
                </button>
                <button class="btn btn-primary btn-sm" id="btnEdit">
                    <i class="fa fa-edit"></i>
                    Sửa
                </button>
                <button class="btn btn-primary btn-sm" id="btnDelete">
                    <i class="fa fa-remove"></i>
                    Xóa
                </button>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" style="height: 30px" value="@DateTime.Now.AddDays(-15).ToString("dd/MM/yyyy")" id="FromDate" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <input type="text" style="height: 30px" value="@DateTime.Now.ToString("dd/MM/yyyy")" id="ToDate" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-primary btn-sm" id="btnSearch">
                            <i class="fa fa-search"></i>
                            Tìm
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="grdMain" event-dbclick="1"></div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script type="text/javascript">
        var users = @Html.Raw(Json.Encode(ViewBag.Users));
        var employees = @Html.Raw(Json.Encode(ViewBag.Employees));
    </script>
    <script src="~/Areas/Hrm/JsAction/IncurredSalary/index.js"></script>
}