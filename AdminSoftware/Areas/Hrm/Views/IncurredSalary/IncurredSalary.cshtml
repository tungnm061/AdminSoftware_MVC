@model Entity.Hrm.IncurredSalary
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <label>Lý do (*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@Model.Title" id="Title" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Nhân viên (*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@Model.EmployeeId" id="EmployeeId"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Số tiền (*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@Model.Amount" id="Amount"/>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Kỳ trả (*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@Model.SubmitDate.ToString("dd/MM/yyyy")" id="SubmitDate" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Ghi chú</label>
            </div>
            <div class="col-md-9">
                <textarea id="Description" class="form-control" rows="2">@Model.Description</textarea>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button class="btn btn-primary" id="btnSave">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var incurredSalaryId = '@Model.IncurredSalaryId';
</script>
<script src="~/Areas/Hrm/JsAction/IncurredSalary/addOrEdit.js"></script>




