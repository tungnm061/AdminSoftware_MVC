@model Entity.Kpi.Complain
<style>
    .k-checkbox-label:before {
        top: 5px;
    }
</style>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Nhân viên vi phạm (*)</label>
                    </div>
                    <div class="col-md-8">
                        <input type="hidden" value="@Model.AccusedBy" id="AccusedBy"/>
                        <input type="text" class="form-control" value="@Model.AccusedByCode - @Model.AccusedByName" readonly="readonly" id="AccusedByName"/>
                        <button class="btn btn-primary btn-xs" @if (Model.Status != 1)
                        {<text>disabled="disabled"  </text>
                        }  id="ModalAccusedBy" style="position: absolute; top: 1.0px; right: 15px; height: 20px;">
                            <i class="glyphicon glyphicon-search"></i>
                            Tìm Kiếm
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-4">
                        <label>Mô tả hành vi (*)</label>
                    </div>
                    <div class="col-md-8">
                        <textarea type="text"  @if (Model.Status != 1)
                        {<text>readonly="readonly"  </text>
                        }  rows="3" class="form-control" id="Description" style="min-height: 150px;">@Model.Description</textarea>
                    </div>
                </div>
            </div>
        </div>       
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 ">
                <button @if (Model.Status != 1)
                        {<text>disabled="disabled"  </text>
                        } class="btn btn-primary" id="btnSave" style="float: right">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var complainId = '@Model.ComplainId';
    var createDate = '@Model.CreateDate';
    var createBy = '@Model.CreateBy';
    var statusComplain = '@Model.Status';
</script>
<script src="~/Areas/Hrm/JsAction/Kpi/Complain/addOrEdit.js"></script>


