@model Entity.Kpi.WorkPlan
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-3">
                        <label>Mã kế hoạch</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" value="@Model.WorkPlanCode" readonly="readonly" id="WorkPlanCode" class="form-control"/>
                    </div>
                </div>
                </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-3">
                        <label>  Ngày bắt đầu</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text"  class="form-control" value="@Model.FromDate.ToString("dd/MM/yyyy")" id="FromDate"/>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-4">
                        <label> Ngày hoàn thành</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text"  class="form-control" value="@Model.ToDate.ToString("dd/MM/yyyy")" id="ToDate" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <textarea class="form-control" rows="3" id="Description" placeholder="Mô tả công việc...." style="min-height: 60px;display:none;">@Model.Description</textarea>
            </div>
        </div>
            <div class="row">
                <div class="col-md-12">
                    <button  class="btn btn-primary btn-xs" id="btnAddWorkPlanDetail" style="padding: 3px 5px;">
                        <i class="glyphicon glyphicon-plus"></i>
                        Thêm
                    </button>
                    <button  class="btn btn-primary btn-xs" id="btnEditWorkPlanDetail" style="padding: 3px 5px;">
                        <i class="glyphicon glyphicon-edit"></i>
                        Sửa
                    </button>
                    <button  class="btn btn-primary btn-xs" id="btnRemoveWorkPlanDetail" style="padding: 3px 5px;">
                        <i class="glyphicon glyphicon-remove"></i>
                        Xóa
                    </button>
                </div>
            </div>
     
       
        <div class="row">
            <div class="col-md-12">
                <div id="grdWorkPlanDetail" event-dbclick="1"></div>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button  class="btn btn-primary" id="btnSave">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<style> 
</style>
<script type="text/javascript">
    var createby = '@Model.CreateBy';
    var createdate = '@Model.CreateDate';
    var workPlanId = '@Model.WorkPlanId';
</script>
<script src="~/Areas/Hrm/JsAction/Kpi/WorkPlan/addOrEdit.js"></script>

