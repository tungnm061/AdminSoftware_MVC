@model Entity.Hrm.RecruitChanel
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <label>Kênh (*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@Model.ChanelName" id="ChanelName" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Ghi chú</label>
            </div>
            <div class="col-md-9">
                <textarea id="Description" class="form-control" rows="2">@Model.Description</textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                <input type="checkbox" class="k-checkbox" id="IsActive" @if (Model.IsActive) { <text> checked="checked" </text>          } />
                <label for="IsActive" class="k-checkbox-label">Theo dõi</label>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button class="btn btn-primary" id="btnSave">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    var recruitChanelId = '@Model.RecruitChanelId';
</script>
<script src="~/Areas/Hrm/JsAction/RecruitChanel/addOrEdit.js"></script>




