@model Entity.Hrm.School

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                <label>Trường (*)</label>
            </div>
            <div class="col-md-9">
                <input type="text" class="form-control" value="@Model.SchoolName" id="SchoolName" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <label>Ghi chú</label>
            </div>
