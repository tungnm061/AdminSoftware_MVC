@model Entity.Kpi.WorkStream
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-3">
                        <label>Mã</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" value="@Model.WorkStreamCode" readonly="readonly" id="WorkStreamCode" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-3">
                        <label> Ngày bắt đầu</label>
                    </div>
                    <div class="col-md-9">
                        <input type="text" class="form-control" value="@Model.FromDate.ToString("dd/MM/yyyy")" id="FromDate" />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-4">
                        <label> Ngày hoàn thành</label>
                    </div>
                    <div class="col-md-8">
                        <input type="text"  class="form-control" value="@Model.ToDate.ToString("dd/MM/yyyy")" id="ToDate" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="row padding-bottom-0">
                    <div class="col-md-1">
                        <label>Công việc(*)</label>
                    </div>
                    <div class="col-md-11">
                        <input type="hidden" value="" id="CheckTaskSearch" />
                        <input type="hidden" value="@Model.Status" id="Status"/>
                        <input type="hidden" value="@Model.TaskId" id="TaskId"/>
                        <input type="hidden" value="@Model.AssignWorkId" id="AssignWorkId"/>
                        <input type="text" class="form-control" value="@Model.TaskCode@Model.TaskAssCode" readonly="readonly" id="TaskName" placeholder="Mã công việc, tên công việc...."/>
                        <div class="btn-group" style="position: absolute; top: 1.5px; right: 15px; height: 20px;">
                            <button  class="btn btn-primary btn-xs" id="ModalTask" style="height: 20px;">
                                <i class="glyphicon glyphicon-search"></i>
                                Công việc hệ thống
                            </button>
                            <button  class="btn btn-primary btn-xs" id="ModalAssignWork" style="height: 20px;">
                                <i class="glyphicon glyphicon-search"></i>
                                Công việc được giao
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <textarea class="form-control" rows="3" id="Description" placeholder="Mô tả công việc...." style="min-height: 60px">@Model.Description</textarea>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Người thực hiện</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <select id="select"></select>
                    </div>
                </div>
            </div>
        </div>

                <div class="row">
                    <div class="col-md-12">
                        <button class="btn btn-primary btn-xs" id="btnAddDetail" style="padding: 3px 5px;">
                            <i class="glyphicon glyphicon-plus"></i>
                            Thêm
                        </button>
                        <button class="btn btn-primary btn-xs" id="btnEditDetail" style="padding: 3px 5px;">
                            <i class="glyphicon glyphicon-edit"></i>
                            Sửa
                        </button>
                        <button class="btn btn-primary btn-xs" id="btnRemoveDetail" style="padding: 3px 5px;">
                            <i class="glyphicon glyphicon-remove"></i>
                            Xóa
                        </button>
                    </div>
                </div>

            <div class="row">
                <div class="col-md-12">
                    <div id="grdWorkStreamDetail" event-dbclick="1"></div>
                </div>
            </div>
        
    </div>
</div>

<div class="panel panel-default window-footer">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12 text-right">
                <button   class="btn btn-primary" id="btnSave">
                    <i class="glyphicon glyphicon-floppy-saved"></i>
                    Lưu
                </button>
            </div>
        </div>
    </div>
</div>
<style> 
</style>
<script type="text/javascript">
    var createby = '@Model.CreateBy';
    var createdate = '@Model.CreateDate';
    var workStreamId = '@Model.WorkStreamId';
    var formDateOlde = '@Model.FromDate';
    var dateNow = '@DateTime.Now';
    var performers = @Html.Raw(Json.Encode(ViewBag.Performers));
    var approvedDate = '@Model.ApprovedDate';
    var approvedBy = '@Model.ApprovedBy';

</script>
<script src="~/Areas/Hrm/JsAction/Kpi/WorkStream/addOrEdit.js"></script>

